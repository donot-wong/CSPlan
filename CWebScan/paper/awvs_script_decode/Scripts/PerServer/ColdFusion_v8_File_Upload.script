/* main entry point */
if (ColdFusionIsDetected())
{
	testFCKOnDir('/CFIDE/scripts/ajax/FCKeditor/');
	testFCKOnDir('/www/CFIDE/scripts/ajax/FCKeditor/');
	testFCKOnDir('/FCKeditor/');
}