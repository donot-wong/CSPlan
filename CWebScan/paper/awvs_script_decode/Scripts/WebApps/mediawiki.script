function alert(fname, job, matchedText)
{	
	var ri = new TReportItem();
	ri.LoadFromFile(fname);
	ri.affects = "Web Server";
	ri.alertPath = "Scripts/" + fname; 	
		
	ri.setHttpInfo(job);
	
	if (matchedText) 
		ri.Details =  ri.Details + "Current version: [blue]" + matchedText + "[/blue]";	
	
	AddReportItem(ri);	
}							 
