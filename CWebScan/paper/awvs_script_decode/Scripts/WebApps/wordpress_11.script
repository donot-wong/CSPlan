// **************************************************************************************
function alert(fname, job, path)
{	
	var ri = new TReportItem();
	ri.LoadFromFile(fname);
	ri.affects = "Web Server";
	ri.alertPath = "Scripts/" + fname; 	
		
	ri.setHttpInfo(job);
	
	if (path) 
		ri.Details =  ri.Details + "Location of uploaded files: [blue]" + path + "[/blue]";	
	
	AddReportItem(ri);	
}							 
