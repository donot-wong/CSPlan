      if( TestCredentials(socket, Usernames[i], Passwords[j]) )
        //Trace(Usernames[i] + ',' + Passwords[j]);      
      	ScriptProgress(ComputeProgress(i*Passwords.length + j, Usernames.length*Passwords.length));
    }
  }
}
